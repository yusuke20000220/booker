<h1>Books</h1>

<main>
 <table>
   <thead>
     <tr>
       <th>title</th>
       <th>body</th>
     </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>

       <td> <%= link_to 'Show', book_path(book.id) %></td>
       <td> <%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td> <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
     </tr>
     <%end%>
   </tbody>
 </table>
</main>



<h2>New Book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>



<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h6>Title</h6>
  <%= f.text_field :title %>
  <h6>Body</h6>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>